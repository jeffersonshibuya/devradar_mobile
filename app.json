{
  "expo": {
    "name": "DevRadar",
    "slug": "mobile",
    "platforms": ["ios", "android"],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#7d40e7"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "bundleIdentifier": "com.jefferson.devradar",
      "supportsTablet": true
    },
    "android": {
      "package": "com.jefferson.devradar",
      "versionCode": 1
    }
  }
}
